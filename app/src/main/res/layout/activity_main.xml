<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivOrderFood"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:src="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:id="@+id/tvFlowerTitleHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivOrderFood" />

    <TextView
        android:id="@+id/tvFlowerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/rose"
        android:textSize="18sp"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvFlowerTitleHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvFlowerTitleHeader"
        app:layout_constraintTop_toTopOf="@+id/tvFlowerTitleHeader"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type"
        android:textSize="18sp"
        android:paddingTop="4dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:id="@+id/tvFlowerTypeHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFlowerTitleHeader" />

    <TextView
        android:id="@+id/tvFlowerType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/flower"
        android:textSize="18sp"
        android:paddingTop="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvFlowerTypeHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvFlowerTypeHeader"
        app:layout_constraintTop_toTopOf="@+id/tvFlowerTypeHeader" />

    <Button
        android:id="@+id/btnGoToNext"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/go_to_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>